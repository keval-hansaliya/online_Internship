<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/login_image"
        android:src="@drawable/login_image"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/internship"
        android:text="Internship"
        android:textColor="@color/white_trans"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:drawableLeft="@drawable/emailid_image"
        android:id="@+id/main_emailid"
        android:inputType="textEmailAddress"
        android:hint="Email Id"
        android:textColorHint="@color/white_trans"
        android:textColor="@color/white_trans"
        android:background="@drawable/custom_border"
        android:layout_below="@id/internship"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        android:textSize="20dp"
        android:drawablePadding="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:drawableLeft="@drawable/password"
        android:id="@+id/main_password"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="@color/white_trans"
        android:textColor="@color/white_trans"
        android:background="@drawable/custom_border"
        android:layout_below="@id/main_emailid"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        android:textSize="20dp"
        android:drawablePadding="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/main_checkbox"
        android:layout_below="@+id/main_password"
        android:text="Remember me"
        android:textColor="@color/white_trans"
        app:buttonTint="@color/white_trans"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <Button
        android:id="@+id/login_button"
        android:layout_below="@+id/main_checkbox"
        android:text="Log In"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#FEA387"
        android:backgroundTint="@color/white"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/signup_button"
        android:layout_below="@+id/login_button"
        android:text="Sign up"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/white_trans"
        android:backgroundTint="#E15570"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/main_forgetpassword"
        android:layout_below="@+id/signup_button"
        android:text="Forget your password"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white_trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>