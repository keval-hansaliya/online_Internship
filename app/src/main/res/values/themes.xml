<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Internship" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryDark">#9E48E1</item>
        <item name="android:statusBarColor">@color/status_color</item>
    </style>

    <style name="button_16_white" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button_white</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:textColor">@color/pink_red</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.Internship" parent="Base.Theme.Internship" />

    <style name="edittext_14" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:background">@drawable/custom_border</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:paddingHorizontal">@dimen/_10sdp</item>
        <item name="android:paddingVertical">@dimen/_6sdp</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/white_trans</item>
        <item name="android:textColorHint">@color/white_trans</item>
    </style>

    <style name="textview_14" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="radio_16" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/white_trans</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/white_trans</item>
    </style>

</resources>